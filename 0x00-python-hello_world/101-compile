#!/bin/bash

# Check if PYFILE environment variable is set
if [[ -z "$PYFILE" ]]; then
  echo "PYFILE environment variable not set."
  exit 1
fi

# Append 'c' to the file extension to create the output filename
output_file="${PYFILE}c"

# Compile the Python script
python -m py_compile "$PYFILE"

# Check if compilation was successful
if [[ $? -eq 0 ]]; then
  echo "Compilation successful. Output file: $output_file"
else
  echo "Compilation failed."
fi

